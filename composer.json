{
    "name": "glavweb/symfony-rest",
    "license": "MIT",
    "type": "project",
    "description": "The \"Symfony Standard Edition\" distribution for REST API",
    "autoload": {
        "psr-4": { "": "src/" },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/glavweb/SonataAdminBundle"
        },
        {
            "type": "git",
            "url": "https://github.com/glavweb/SonataUserBundle"
        },
        {
            "type": "git",
            "url": "https://github.com/glavweb/SonataDoctrineORMAdminBundle"
        },
        {
            "type": "git",
            "url": "https://github.com/glavweb/LiipFunctionalTestBundle"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "symfony/symfony": "2.8.*",
        "doctrine/orm": "^2.4.8",
        "doctrine/doctrine-bundle": "~1.4",
        "doctrine/doctrine-fixtures-bundle": "^2.2",
        "doctrine/migrations": "1.1.*",
        "doctrine/doctrine-migrations-bundle": "1.1.*",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "sensio/generator-bundle": "~2.3",
        "incenteev/composer-parameter-handler": "~2.0",
        "phpunit/phpunit": "~4.2",
        "sonata-project/admin-bundle": "~2.3",
        "sonata-project/doctrine-orm-admin-bundle": "~2.3",
        "sonata-project/core-bundle": "~2.3",
        "sonata-project/intl-bundle": "~2.2",
        "sonata-project/datagrid-bundle": "dev-master",
        "sonata-project/user-bundle": "~2.2",
        "friendsofsymfony/user-bundle": "~1.3",
        "friendsofsymfony/rest-bundle": "1.5.*",
        "vich/uploader-bundle": "0.14.*",
        "braincrafted/bootstrap-bundle": "~2.0",
        "liip/imagine-bundle": "~1.3",
        "liip/functional-test-bundle": "~1.3",
        "fresh/doctrine-enum-bundle": "4.0.*",
        "jms/serializer-bundle": "0.13.*@dev",
        "nelmio/api-doc-bundle": "~2.4",
        "nelmio/cors-bundle": "~1.3",
        "nelmio/alice": "^2.1",
        "hautelook/alice-bundle": "^1.1",
        "glavweb/core-bundle": "~0.1"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "~2.7"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "2.8-dev"
        }
    }
}
